<!DOCTYPE html>
<html lang="en" data-theme="nord">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project - <%= project.title %></title>
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
    <%- include('partials/navbar', {page: ''}) %>

    <div class="hero min-h-96 bg-base-200">
        <div class="hero-content text-center">
            <div class="max-w-lg">
                <h1 class="text-5xl font-bold">Edit Project</h1>
                <p class="py-6"><%= project.title %></p>
            </div>
        </div>
    </div>

    <div class="container mx-auto p-4">
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">Project Information</h2>
                
                <form action="/solutions/editProject" method="POST" class="space-y-6">
                    <input type="hidden" name="id" value="<%= project.id %>">
                    
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Title</span>
                        </label>
                        <input type="text" name="title" class="input input-bordered" value="<%= project.title %>" required>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Feature Image URL</span>
                        </label>
                        <input type="url" name="feature_img_url" class="input input-bordered" value="<%= project.feature_img_url %>" required>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Sector</span>
                        </label>
                        <select name="sector_id" class="select select-bordered" required>
                            <% sectors.forEach(sector => { %>
                                <option <%= (project.sector_id == sector.id) ? "selected" : "" %> value="<%= sector.id %>">
                                    <%= sector.sector_name %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Introduction (Short)</span>
                        </label>
                        <textarea name="intro_short" class="textarea textarea-bordered h-24" required><%= project.intro_short %></textarea>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Summary (Short)</span>
                        </label>
                        <textarea name="summary_short" class="textarea textarea-bordered h-24" required><%= project.summary_short %></textarea>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Impact</span>
                        </label>
                        <textarea name="impact" class="textarea textarea-bordered h-32" required><%= project.impact %></textarea>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Original Source URL</span>
                        </label>
                        <input type="url" name="original_source_url" class="input input-bordered" value="<%= project.original_source_url %>" required>
                    </div>

                    <div class="card-actions justify-between">
                        <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error" 
                           onclick="return confirm('Are you sure you want to delete this project?')">
                            Delete Project
                        </a>
                        <div class="flex gap-2">
                            <button type="submit" class="btn btn-primary">Update Project</button>
                            <a href="/solutions/projects" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>